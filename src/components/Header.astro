<style>
	header {
		position: sticky;
		top: 0;
		z-index: 1000;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(59, 130, 246, 0.1);
		box-shadow: 0 2px 20px var(--background-hover);
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 2rem;
		height: 70px;
	}

	.logo {
		display: flex;
		align-items: center;
	}

	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.logo h2 {
		margin: 0;
		font-size: 1.5rem;
		font-weight: 700;
		color: #1e293b;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.3s ease;
		width: 40px;
		height: 40px;
	}

	.logo-link:hover h2 {
		color: var(--whatsapp-dark);
	}

	.logo-text {
		font-size: 1.2rem;
		color: #1e293b;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.logo-link:hover .logo-text {
		color: var(--whatsapp-dark);
	}

	/* Screen reader only text */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.nav-links :global(a) {
		color: #475569;
		text-decoration: none;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		font-weight: 500;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-links :global(a:hover) {
		color: var(--whatsapp-dark);
		background: var(--background-hover);
	}

	.nav-links :global(a.active) {
		color: var(--whatsapp-dark);
		background: rgba(59, 130, 246, 0.1);
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.social-links a {
		color: #64748b;
		padding: 0.5rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.social-links a:hover {
		color: var(--whatsapp-dark);
		background: var(--background-hover);
		transform: translateY(-1px);
	}

	/* Menu toggle simplificado con SVGs */
	.menu-toggle {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		border-radius: 6px;
		transition: all 0.3s ease;
		color: #475569;
		position: relative;
		width: 40px;
		height: 40px;
		justify-content: center;
		align-items: center;
	}

	.menu-toggle:hover {
		color: var(--whatsapp-dark);
		background: var(--background-hover);
	}

	.menu-icon,
	.close-icon {
		position: absolute;
		transition: all 0.3s ease;
	}

	.close-icon {
		opacity: 0;
		transform: rotate(90deg) scale(0.8);
	}

	.menu-toggle.menu-open .menu-icon {
		opacity: 0;
		transform: rotate(-90deg) scale(0.8);
	}

	.menu-toggle.menu-open .close-icon {
		opacity: 1;
		transform: rotate(0deg) scale(1);
	}

	.menu-toggle.menu-open {
		color: var(--whatsapp-dark);
	}

	.mobile-menu {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: white;
		border-bottom: 1px solid rgba(59, 130, 246, 0.1);
		box-shadow: 0 10px 40px rgba(59, 130, 246, 0.1);
		padding: 0;
		max-height: 0;
		overflow: hidden;
		transition: all 0.4s ease-in-out;
	}

	/* Estados del mená móvil */
	nav.menu-open .mobile-menu {
		max-height: 400px;
		padding: 1rem 2rem 2rem;
	}

	.mobile-links {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		margin-bottom: 1.5rem;
	}

	.mobile-links :global(a) {
		color: #475569;
		text-decoration: none;
		padding: 0.75rem 1rem;
		border-radius: 8px;
		font-weight: 500;
		transition: all 0.3s ease;
		border-left: 3px solid transparent;
	}

	.mobile-links :global(a:hover),
	.mobile-links :global(a.active) {
		color: var(--whatsapp-dark);
		background: var(--background-hover);
		border-left-color: var(--whatsapp);
	}

	.mobile-social {
		display: flex;
		justify-content: center;
		gap: 1rem;
		padding-top: 1rem;
		border-top: 1px solid rgba(59, 130, 246, 0.1);
	}

	.mobile-social a {
		color: #64748b;
		padding: 0.75rem;
		border-radius: 8px;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.mobile-social a:hover {
		color: var(--whatsapp-dark);
		background: var(--background-hover);
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 0 1rem;
		}

		.nav-links,
		.social-links {
			display: none;
		}

		.menu-toggle {
			display: flex;
		}

		.logo-text {
			display: none;
		}
	}

	@media (max-width: 480px) {
		.nav-container {
			height: 60px;
		}

		.logo h2 {
			font-size: 1.25rem;
		}
	}
</style>

<script>
	const menuToggle = document.querySelector('.menu-toggle');
	const nav = document.querySelector('nav');

	if (menuToggle && nav) {
		menuToggle.addEventListener('click', () => {
			const isOpen = nav.classList.contains('menu-open');
			nav.classList.toggle('menu-open');
			menuToggle.classList.toggle('menu-open');
			
			// Update aria-expanded attribute
			menuToggle.setAttribute('aria-expanded', (!isOpen).toString());
			
			// Update aria-label for better context
			const label = isOpen ? 'Abrir menú de navegación' : 'Cerrar menú de navegación';
			menuToggle.setAttribute('aria-label', label);
		});

		// Cerrar menú al hacer click en un enlace
		const mobileLinks = document.querySelectorAll('.mobile-links a');
		mobileLinks.forEach(link => {
			link.addEventListener('click', () => {
				nav.classList.remove('menu-open');
				menuToggle.classList.remove('menu-open');
				menuToggle.setAttribute('aria-expanded', 'false');
				menuToggle.setAttribute('aria-label', 'Abrir menú de navegación');
			});
		});

		// Cerrar menú al hacer click fuera
		document.addEventListener('click', (e) => {
			if (!nav.contains(e.target as Node)) {
				nav.classList.remove('menu-open');
				menuToggle.classList.remove('menu-open');
				menuToggle.setAttribute('aria-expanded', 'false');
				menuToggle.setAttribute('aria-label', 'Abrir menú de navegación');
			}
		});
	}
</script>