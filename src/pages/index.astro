---
// Índice principal, página de caída
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
import ProfilePhoto from '../assets/round_pfp.png';
import CV from '../assets/Luciano_Cabrales_CV.pdf';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Luciano André Cabrales Lefimil - Desarrollador Full Stack: 
		Técnico en Programación y Análisis de Sistemas especializado en desarrollo web, integración de APIs, 
        automatización y soluciones tecnológicas personalizadas desde Santiago, Chile."/>
		<meta name="viewport" content="width=device-width" />
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<div class="hero-section">
			<div class="profile-container">
				<div class="profile-image">
					<Image 
						src={ProfilePhoto} 
						alt="Luciano André Cabrales Lefimil, Desarrollador Full Stack especializado en Python, JavaScript y automatización web, Santiago Chile"
						loading="eager"
						priority={true}
					/>
				</div>
				<div class="profile-content">
					<h1 itemprop="name"><span class="name-white">Luciano André Cabrales Lefimil</span></h1>
					<h2 class="role" itemprop="jobTitle">Desarrollador Web | Automatización Backend</h2>
					<p class="description" itemprop="description">Desarrollador web con experiencia en automatización y soporte técnico, especializado en integraciones entre EspoCRM, WordPress y plataformas externas mediante API REST. Desarrollo sitios web escalables a medida usando Python (Flask, Jinja2), PHP, JavaScript/TypeScript y Astro, con servicios en la nube AWS S3.</p>
					<div class="tech-stack">
						<span class="tech-badge">C#</span>
						<span class="tech-badge">Python</span>
						<span class="tech-badge">JavaScript</span>
						<span class="tech-badge">TypeScript</span>
						<span class="tech-badge">PHP</span>
						<span class="tech-badge">OCR</span>
						<span class="tech-badge">Selenium</span>
						<span class="tech-badge">Web Scraping</span>
						<span class="tech-badge">Azure DevOps</span>
						<span class="tech-badge">SQL Server</span>
						<span class="tech-badge">API REST</span>
						<span class="tech-badge">EspoCRM</span>
						<span class="tech-badge">AWS S3</span>
						<span class="tech-badge">Flask</span>
						<span class="tech-badge">Astro</span>
					</div>
<div class="action-buttons">
	<a href={CV} download="Luciano_Cabrales_CV.pdf" class="action-button white-button">
