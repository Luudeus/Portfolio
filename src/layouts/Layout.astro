---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';


const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Luciano André Cabrales Lefimil - Desarrollador Full Stack: 
		Técnico en Programación y Análisis de Sistemas especializado en desarrollo web, integración de APIs, 
        automatización y soluciones tecnológicas personalizadas desde Santiago, Chile."/>
		<meta name="viewport" content="width=device-width" />
        <BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>