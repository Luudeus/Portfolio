---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';


const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Centro Areté Salud Mental: 
		Somos un equipo multidisciplinario orientado a la atención integral de las familias, que nace con la intención de 
        buscar un espacio de trabajo profesional colaborativo, en el que confluyan distintas especialidades de la salud mental."/>
		<meta name="viewport" content="width=device-width" />
        <BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>